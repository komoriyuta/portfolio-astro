---
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{project.data.title} ‚Äî Yuta Komori</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;600&family=Source+Serif+4:ital,wght@0,400;0,600;1,400&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();
      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>
  </head>
  <body>
    <header class="header">
      <div class="container container--wide">
        <a href="/#projects" class="back-link">
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="m15 18-6-6 6-6"></path>
          </svg>
          Back to Home
        </a>
      </div>
    </header>

    <main class="main">
      <article class="project-detail">
        <div class="project-hero">
          <div class="container project-hero__container fade-in">
            <div class="project-hero__meta">
              <span class="project-hero__year">{project.data.period}</span>
              {
                project.data.tags.map((tag: string) => (
                  <a
                    href={`/tags/${tag}`}
                    class="tag tag--sm"
                    style="text-decoration:none;"
                  >
                    {tag}
                  </a>
                ))
              }
              {
                project.data.award && (
                  <span class="project-hero__award">
                    üèÜ {project.data.award}
                  </span>
                )
              }
            </div>
            <h1 class="project-hero__title">
              {project.data.title}
              <span class="project-hero__title-en">{project.data.titleEn}</span>
            </h1>
            <div class="project-hero__tags">
              {
                project.data.tags.map((tag: string) => (
                  <a
                    href={`/tags/${tag}`}
                    class="tag tag--primary"
                    style="text-decoration:none;"
                  >
                    {tag}
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <div class="container project-content fade-in" style="--delay: 0.1s">
          <div class="project-content__image">
            <Image src={project.data.thumbnail} alt={project.data.title} />
          </div>

          <div class="project-content__text">
            <Content />

            {
              project.data.images && project.data.images.length > 0 && (
                <div class="project-gallery">
                  <h3>Gallery</h3>
                  <div class="project-gallery__grid">
                    {project.data.images.map((img: any) => (
                      <div class="project-gallery__item">
                        <Image
                          src={img}
                          alt={`${project.data.title} screenshot`}
                        />
                      </div>
                    ))}
                  </div>
                </div>
              )
            }

            {
              project.data.result && (
                <div class="project-result">
                  <strong>ÊàêÊûú:</strong> {project.data.result}
                </div>
              )
            }

            {
              project.data.links && (
                <div class="project-links">
                  <h3>Links</h3>
                  <div class="project-links__list">
                    {project.data.links.map((link) => (
                      <a
                        href={link.url}
                        class="project-link-btn"
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        {link.label}
                        <svg
                          width="16"
                          height="16"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M7 17L17 7M17 7H7M17 7V17" />
                        </svg>
                      </a>
                    ))}
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </article>
    </main>

    <footer class="footer">
      <div class="container footer__inner">
        <p class="footer__copy">¬© 2025 Yuta Komori</p>
      </div>
    </footer>

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("is-visible");
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: "0px 0px -30px 0px" },
      );
      document
        .querySelectorAll(".fade-in")
        .forEach((el) => observer.observe(el));
    </script>

    <style>
      /* ‚îÄ‚îÄ‚îÄ Tokens ‚îÄ‚îÄ‚îÄ */
      :root {
        --bg: #ffffff;
        --bg-alt: #f7f7f5;
        --text: #222;
        --text-sub: #555;
        --muted: #999;
        --primary: #3d6b5e;
        --primary-light: #eef4f1;
        --border: #e8e8e5;
        --radius: 10px;
        --font-serif: "Source Serif 4", "Noto Sans JP", serif;
        --font-sans: "Noto Sans JP", sans-serif;
        --max-w: 880px;
      }
      :root.dark {
        --bg: #111111;
        --bg-alt: #1a1a1a;
        --text: #eeeeee;
        --text-sub: #aaaaaa;
        --muted: #666666;
        --primary: #529180;
        --primary-light: #20352e;
        --border: #333333;
      }

      /* ‚îÄ‚îÄ‚îÄ Reset ‚îÄ‚îÄ‚îÄ */
      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html {
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
      }
      body {
        font-family: var(--font-sans);
        background: var(--bg);
        color: var(--text);
        font-size: 15px;
        line-height: 1.8;
        font-weight: 400;
      }
      .container {
        max-width: var(--max-w);
        margin: 0 auto;
        padding: 0 24px;
      }
      .container--wide {
        max-width: 1200px;
      }
      a {
        color: inherit;
        text-decoration: none;
      }
      img {
        display: block;
        max-width: 100%;
      }

      /* ‚îÄ‚îÄ‚îÄ Animation ‚îÄ‚îÄ‚îÄ */
      .fade-in {
        opacity: 0;
        transform: translateY(16px);
        transition:
          opacity 0.55s ease,
          transform 0.55s ease;
        transition-delay: var(--delay, 0s);
      }
      .fade-in.is-visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Header */
      .header {
        padding: 24px 0;
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        z-index: 100;
        border-bottom: 1px solid var(--border);
      }
      :root.dark .header {
        background: rgba(17, 17, 17, 0.9);
      }
      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 14px;
        font-weight: 500;
        color: var(--text-sub);
        transition: color 0.2s;
      }
      .back-link:hover {
        color: var(--primary);
      }

      /* Tags */
      .tag {
        display: inline-block;
        padding: 5px 12px;
        font-size: 12.5px;
        font-weight: 500;
        border-radius: 6px;
        background: var(--bg);
        border: 1px solid var(--border);
        color: var(--text-sub);
      }
      .tag--primary {
        background: var(--primary-light);
        border-color: transparent;
        color: var(--primary);
      }

      /* Hero */
      .project-hero {
        padding: 64px 0 48px;
        background: var(--bg-alt);
        border-bottom: 1px solid var(--border);
      }
      .project-hero__meta {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 16px;
        flex-wrap: wrap;
      }
      .project-hero__year {
        font-size: 14px;
        font-weight: 600;
        color: var(--muted);
      }
      .project-hero__award {
        font-size: 13px;
        font-weight: 500;
        color: var(--primary);
        background: var(--primary-light);
        padding: 4px 12px;
        border-radius: 4px;
      }
      .project-hero__title {
        font-family: var(--font-serif);
        font-size: clamp(28px, 5vw, 42px);
        font-weight: 600;
        line-height: 1.3;
        margin-bottom: 24px;
        color: var(--text);
      }
      .project-hero__title-en {
        display: block;
        font-family: var(--font-sans);
        font-size: 16px;
        font-weight: 400;
        color: var(--text-sub);
        margin-top: 4px;
      }
      .project-hero__tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
      }

      /* Content */
      .project-content {
        padding: 64px 24px 80px;
      }
      .project-content__image {
        border-radius: var(--radius);
        overflow: hidden;
        margin-bottom: 48px;
        background: var(--bg-alt);
        border: 1px solid var(--border);
      }
      .project-content__image img {
        width: 100%;
        height: auto;
      }
      :root.dark .project-content__image img {
        opacity: 0.85;
      }

      .project-content__text {
        max-width: 720px;
        margin: 0 auto;
      }
      .project-content__text :global(h2) {
        font-family: var(--font-serif);
        font-size: 24px;
        margin: 48px 0 24px;
        color: var(--text);
      }
      .project-content__text :global(p) {
        margin-bottom: 24px;
        color: var(--text-sub);
      }

      /* Result */
      .project-result {
        margin-top: 48px;
        padding: 24px;
        background: var(--primary-light);
        border-radius: var(--radius);
        color: var(--primary);
        font-size: 15px;
      }

      /* Links */
      .project-links {
        margin-top: 64px;
        padding-top: 48px;
        border-top: 1px solid var(--border);
      }
      .project-links h3 {
        font-size: 18px;
        margin-bottom: 24px;
      }
      .project-links__list {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
      }
      .project-link-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 100px;
        font-weight: 500;
        color: var(--text);
        transition:
          border-color 0.2s,
          background 0.2s;
      }
      .project-link-btn:hover {
        border-color: var(--primary);
        background: var(--primary-light);
        color: var(--primary);
      }

      /* Footer */
      .footer {
        padding: 32px 0;
        border-top: 1px solid var(--border);
      }
      .footer__inner {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .footer__copy {
        font-size: 13px;
        color: var(--muted);
      }

      /* Gallery */
      .project-gallery {
        margin-top: 48px;
        padding-top: 32px;
        border-top: 1px dashed var(--border);
      }
      .project-gallery h3 {
        font-family: var(--font-serif);
        font-size: 20px;
        margin-bottom: 24px;
        color: var(--text);
      }
      .project-gallery__grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 24px;
      }
      .project-gallery__item {
        border-radius: var(--radius);
        overflow: hidden;
        border: 1px solid var(--border);
        background: var(--bg-alt);
      }
      .project-gallery__item img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
      }
      :root.dark .project-gallery__item img {
        opacity: 0.85;
      }

      @media (max-width: 680px) {
        .project-hero {
          padding: 48px 0 32px;
        }
        .project-content {
          padding: 40px 24px 64px;
        }
      }
    </style>
  </body>
</html>
